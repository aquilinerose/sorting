
#include <stdio.h>
#include<stdlib.h>
int a[100];
void quicksort (int [], int, int);
int  partition(int[], int, int);
void swap(int*, int*);
int main()
{
	int n,i;
	printf("Enter number of Elements: ");
	scanf("%d",&n);
	printf("Enter the integers");
	for(i=0;i<n;i++)
	    scanf("%d",&a[i]);
    quicksort(a,0,n-1);
    printf("Quick Sorted List of Numbers\n");
	for(i = 0; i < n; i++)
	{
		printf("%d\n",a[i]);
	}
}
void quicksort(int a[], int start, int end)
{
    int loc;
    if(start < end)
    {
        loc= partition(a, start, end);
        quicksort(a, start,loc-1);
        quicksort(a, loc+1, end);
    }
}

int partition(int a[], int start, int end)
{
    int lb = start;
    int pivot = a[end];
    int i;
    for(i = start; i < end; i++)
    {
        if(a[i] < pivot)
        {
            swap(&a[i], &a[lb]);
            lb++;
        }
    }
    swap(&a[end], &a[lb]);
    return lb;
}

void swap(int *x, int *y)
{
    int t = *x;
    *x = *y;
    *y = t;
}
